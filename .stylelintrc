{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "selectors-within-list",
        "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s", "px"],
  }
}
